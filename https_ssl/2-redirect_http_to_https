global
    daemon
    maxconn 256

defaults
    mode http
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend http_front
    bind *:80
    redirect scheme https code 301

frontend https_front
    bind *:443 ssl crt /etc/letsencrypt/live/www.leonnsamba.tech/haproxy.pem
    default_backend web_servers

backend web_servers
    balance roundrobin
    server web-01 52.87.192.192:80 check
    server web-02 52.91.235.48:80 check
